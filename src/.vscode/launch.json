    "version": "0.2.0",
    "configurations": [
        {
            "name": "ProductsApiDemo (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build ProductsApiDemo",
            "program": "${workspaceFolder}/ProductsApiDemo/bin/Debug/netcoreapp2.2/ProductsApiDemo.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ProductsApiDemo",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "ProductsODataApiDemo (web)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build ProductsODataApiDemo",
            "program": "${workspaceFolder}/ProductsODataApiDemo/bin/Debug/netcoreapp2.2/ProductsODataApiDemo.dll",
            "args": [],
            "cwd": "${workspaceFolder}/ProductsODataApiDemo",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": true,
                "args": "${auto-detect-url}/swagger"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}